<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>

<script src="~/js/Dashboardmain.js"></script>
<script src="~/js/Master.js"></script>

<script>
    $("#companynameid").select2();
    $("#Region").select2();
    $("#Branch").select2();
</script>

