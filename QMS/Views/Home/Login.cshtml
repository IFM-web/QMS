@model ifm360Reports.Models.Adm_User;
@{

    ViewData["Title"] = "Login";


}



<link href="~/css/loginstyle.css" rel="stylesheet" />
<!-- Contact form Start -->
<div class="section mt-negative pt-0">
    <div class="container">
        <section class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/GroupL.jfif"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <form method="post" asp-controller="Home" asp-action="Login">
                            @if (TempData["AlertMessage"] != null)
                            {
                                var type = TempData["AlertType"] ?? "info"; // fallback
                                <div class="alert alert-@type alert-dismissible fade show" role="alert">
                                    @TempData["AlertMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label class="form-label" for="form3Example3">LoginId</label>
                                <input asp-for="uname" type="text" id="form3Example3" class="form-control form-control-lg"
                                       placeholder="Enter LoginId" />
                                @Html.ValidationMessageFor(m => m.uname, "", new { @class = "text-danger" })
                            </div>

                            <!-- Password input -->
                            <div data-mdb-input-init class="form-outline mb-3">
                                <label class="form-label" for="form3Example4">Password</label>
                                <input asp-for="pwd" type="password" id="form3Example4" class="form-control form-control-lg"
                                       placeholder="Enter Password" />
                                @Html.ValidationMessageFor(m => m.pwd, "", new { @class = "text-danger" })
                            
                            </div>

                           

                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem; background-color:#ce2634 !important; color:white; border:none">
                                    Login
                                </button>
                               
                            </div>

                        </form>
                    </div>
                </div>
            </div>
           
        </section>
    </div>
</div>
