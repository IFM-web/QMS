<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />
<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 font-weight-bold text-primary ">Vendor</h6>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="Name" placeholder="Enter Name" class="form-control mandatory" id="Name" />
                        
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Contact No</label>
                        <input name="Contact No" placeholder="Enter Contact No" class="form-control mandatory" id="contact" />

                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input name="Email" placeholder="Enter Email" class="form-control mandatory" id="Email" />

                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Address</label>
                        <input name="Address" placeholder="Enter Address" class="form-control mandatory" id="Address" />

                    </div>

                </div>
                <div class="col-md-2">

                    <button onclick="Insert()" class="btn btn-primary">Save</button>
                </div>
              
             
                            <div class="table-responsive mt-2" >
                                <table class="table table-bordered" id="data-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Name</th>
                                            <th>Contact No</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                         
                                        </tr>
                                    </thead>
                                    <tbody id="quotationTableBody">
                                    </tbody>
                                </table>
                            </div>






        </div>

    </div>
